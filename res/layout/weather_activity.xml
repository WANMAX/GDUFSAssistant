<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button android:id="@+id/weather_today"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:background="@drawable/button_left_top_rectangle"/>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <Button android:id="@+id/weather_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_right_top_rectangle"/>
        <Button android:id="@+id/weather_the_day_after_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_right_right_rectangle"/>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button android:id="@+id/weather_1"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_left_bottom_rectangle"/>
        <Button android:id="@+id/weather_2"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_bottom_bottom_rectangle"/>
        <Button android:id="@+id/weather_3"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_bottom_bottom_rectangle"/>
        <Button android:id="@+id/weather_4"
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_right_bottom_rectangle"/>
    </LinearLayout>
</LinearLayout>
