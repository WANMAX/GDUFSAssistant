<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="radio_button_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/button_rectangle</item>
    </style>
    <style name="top_button">
        <item name="android:background">@drawable/button_top_rectangle</item>
    </style>
    <style name="bottom_button">
        <item name="android:background">@drawable/button_bottom_rectangle</item>
    </style>
    <style name="center_button">
        <item name="android:background">@drawable/button_center_rectangle</item>
    </style>
    <style name="left_button">
        <item name="android:background">@drawable/button_left_rectangle</item>
    </style>
    <style name="right_button">
        <item name="android:background">@drawable/button_right_rectangle</item>
    </style>
    <style name="vertical_interval">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="tag_name">
       	<item name="android:layout_height">match_parent</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_marginLeft">6dip</item>
    	<item name="android:gravity">center_vertical</item>
    </style>
    <style name="tag_value">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    	<item name="android:layout_margin">6dip</item>
    	<item name="android:gravity">center_horizontal</item>
    	<item name="android:textSize">20sp</item>
    </style>
	<style name="course_table_text">
	    <item name="android:textSize">12sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">2dp</item>
    </style>
</resources>
